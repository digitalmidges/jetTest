<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="400">
       <KeyFrameSet>
           <KeyPosition
               motion:motionTarget="@+id/customFab"
               motion:framePosition="50"
               motion:keyPositionType="deltaRelative"
               motion:percentX="0.85"
               motion:percentY="0.15" />
           <KeyPosition
               motion:motionTarget="@+id/imgFilterIcon"
               motion:framePosition="50"
               motion:keyPositionType="deltaRelative"
               motion:percentX="0.85"
               motion:percentY="0.15" />
       </KeyFrameSet>
        <OnClick motion:targetId="@id/customFab" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            motion:layout_constraintDimensionRatio="1:1"
            android:layout_height="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="412dp"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:id="@+id/horizontalDivider" />
        <Constraint
            android:layout_height="@dimen/fab_size"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/fab_size"
            motion:layout_constraintTop_toBottomOf="@+id/horizontalDivider"
            android:id="@+id/customFab"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
</MotionScene>